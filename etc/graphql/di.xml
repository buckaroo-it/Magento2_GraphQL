<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\QuoteGraphQl\Model\Cart\Payment\AdditionalDataProviderPool">
        <arguments>
            <argument name="dataProviders" xsi:type="array">
                <item name="buckaroo_additional" xsi:type="object">Buckaroo\Magento2Graphql\Model\AdditionalDataProvider</item>
            </argument>
        </arguments>
    </type>
    <type name="Buckaroo\Magento2\Model\Method\AbstractMethod">
        <plugin sortOrder="1" name="buckaroo.return_url"
                type="Buckaroo\Magento2Graphql\Model\Payment\Method\AbstractMethodPlugin"/>
    </type>
    <type name="Buckaroo\Magento2\Gateway\Http\TransactionBuilder\Order">
        <plugin sortOrder="1" name="BuckarooAbstractTransactionBuilder"
                type="Buckaroo\Magento2Graphql\Plugin\OrderTransactionBuilderPlugin"/>
    </type>
    <type name="Buckaroo\Magento2Graphql\Model\AdditionalDataProvider">
        <plugin sortOrder="1" name="BuckarooAdditionalDataProvider"
                type="Buckaroo\Magento2Graphql\Model\AdditionalDataProvider"/>
    </type>
</config>
