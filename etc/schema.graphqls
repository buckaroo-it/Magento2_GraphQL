}

#Method additional data
type BuckarooAdditionalData {
    key: String!
    values: [BuckarooMultipleValues]  @doc(description: "Field values")
    value: String  @doc(description: "Field values")
}
type BuckarooMultipleValues {
    name: String!
    code: String!
    img: String
}
